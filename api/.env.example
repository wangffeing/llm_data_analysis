# ===========================================
# 环境配置
# ===========================================
ENVIRONMENT=development  # development, production

# ===========================================
# 数据库配置 (必需) - 选择其中一种
# ===========================================
# 方式1: 使用连接字符串 (推荐)
DB_CONNECTION_STRING=opengauss://username:password@host:port/database

# 示例连接字符串:
# OpenGauss: opengauss://og_fenxi:password@10.126.246.168:25400/fenxi
# MySQL: mysql://username:password@localhost:3306/database
# SQLite: sqlite:///path/to/database.db
# PostgreSQL: postgresql://username:password@localhost:5432/database

# ===========================================
# 配置数据库设置
# ===========================================
USE_DATABASE_CONFIG=true
CONFIG_DB_PATH=config_database.db

# ===========================================
# API密钥配置 (必需)
# ===========================================
DASHSCOPE_API_KEY=your-dashscope-api-key-here
LINGYUN_API_KEY=your-lingyun-api-key-here

# ===========================================
# 服务器配置
# ===========================================
HOST=0.0.0.0
PORT=8000
DEBUG=false
SECRET_KEY=your-secret-key-change-in-production-environment

# ===========================================
# CORS配置
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# 数据库连接池配置
# ===========================================
DB_POOL_MAX_CONNECTIONS=10
DB_POOL_MIN_CONNECTIONS=3

# ===========================================
# SSE (Server-Sent Events) 配置
# ===========================================
SSE_BATCH_INTERVAL=0.3
SSE_MAX_BATCH_SIZE=8
SSE_MAX_BUFFER_SIZE=100
SSE_HEARTBEAT_INTERVAL=30

# ===========================================
# TaskWeaver配置
# ===========================================
TASKWEAVER_PROJECT_PATH=project

# ===========================================
# 日志配置
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=

# ===========================================
# 文件上传配置
# ===========================================
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR=uploads

